@model IEnumerable<Ugani_Restaurant.Models.KHUYENMAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var user = User.Identity.Name;
    var isAdmin = User.IsInRole("Admin");
}


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TENIMG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TILE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NGAYBATDAU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NGAYKETTHUC)
        </th>
        @if (isAdmin)
        {
            <td>Tác vụ</td>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TENIMG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TILE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGAYBATDAU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGAYKETTHUC)
            </td>
            @if (isAdmin)
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MAKM }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MAKM }, new { @class = "btn btn-danger btn-delete", @data_toggle = "modal", @data_target = "#modalDelete", @data_id = item.MAKM })
                </td>
            }
        </tr>
    }

</table>

<!-- Modal -->
<div class="modal fade" id="modalDelete" tabindex="-1" aria-labelledby="modalDeleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalDeleteLabel">Delete</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalDeleteContent">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Quay lại</button>
                <button type="button" class="btn btn-primary" id="btn-delete-submit">Xóa</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
<script>
    $(function () {
        var id = '';
        $('.btn-delete').click(function (e) {
            e.preventDefault();
            id = $(this).data('id');
            var url = $(this).attr('href');
            $.post(url, { id: id }, function (data) {
                $('#modalDeleteContent').html(data);
                $('#modalDelete').modal('show');
            });
        });

        // Gọi hàm xử lý sự kiện click từ button khác
        $('#btn-delete-submit').click(function (e) {
            $.ajax({
                type: 'GET',
                url: '/Admin/KHUYENMAIs/DeleteSubmit',
                data: { CatId: id },
                success: function (response) {
                    window.location.reload();
                }
            });
        });
    });


</script>

